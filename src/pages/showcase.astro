// Showcase.astro - Complete Page Layout with Cursor & Locomotive

const showcaseItems = [
  {
    id: 1,
    title: 'Timeless Elegance',
    titleJp: '永遠の優雅さ',
    category: 'Spring 2024',
    description: 'Where tradition meets contemporary minimalism',
    image: 'Flowing fabrics, natural tones'
  },
  {
    id: 2,
    title: 'Urban Heritage',
    titleJp: '都市の遺産',
    category: 'Urban Collection',
    description: 'Modern silhouettes rooted in craftsmanship',
    image: 'Structured forms, clean lines'
  },
  {
    id: 3,
    title: 'Artisan Soul',
    titleJp: '職人の魂',
    category: 'Heritage Line',
    description: 'Hand-finished pieces with timeless appeal',
    image: 'Indigo dye, traditional weaving'
  },
  {
    id: 4,
    title: 'Minimal Form',
    titleJp: 'ミニマル形式',
    category: 'Essentials',
    description: 'Essential pieces for everyday luxury',
    image: 'Pure design, quality materials'
  },
  {
    id: 5,
    title: 'Natural Flow',
    titleJp: '自然な流れ',
    category: 'Summer 2024',
    description: 'Breathable layers for warm seasons',
    image: 'Lightweight linen, organic cotton'
  },
  {
    id: 6,
    title: 'Silent Strength',
    titleJp: '静かな強さ',
    category: 'Winter Collection',
    description: 'Refined warmth with understated power',
    image: 'Heavy canvas, wool blends'
  },
];

const stats = [
  { number: '2019', label: 'Established' },
  { number: '500+', label: 'Pieces Created' },
  { number: '12', label: 'Artisan Partners' },
  { number: '98%', label: 'Satisfaction Rate' },
