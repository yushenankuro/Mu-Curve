---
const craftSteps = [
  {
    number: '01',
    title: 'Material Selection',
    titleJp: '素材選定',
    desc: 'We source premium organic cotton and linen from traditional Japanese mills with centuries of expertise.',
    image: 'Natural fibers, sustainable sourcing'
  },
  {
    number: '02',
    title: 'Pattern Making',
    titleJp: '型紙作成',
    desc: 'Each pattern is meticulously crafted by hand, blending traditional kimono-making techniques with modern silhouettes.',
    image: 'Precision cutting, heritage techniques'
  },
  {
    number: '03',
    title: 'Dyeing Process',
    titleJp: '染色工程',
    desc: 'Natural indigo dyeing methods passed down through generations create unique depth and character in every piece.',
    image: 'Traditional indigo, artisan crafted'
  },
  {
    number: '04',
    title: 'Hand Finishing',
    titleJp: '仕上げ作業',
    desc: 'Final touches are applied by skilled artisans, ensuring each garment meets our exacting standards of quality.',
    image: 'Attention to detail, quality assured'
  },
];
---

<section class="craft-section py-24 md:py-32 bg-zinc-950 relative overflow-hidden" data-scroll-section id="craft">
  <!-- Header -->
  <div class="container mx-auto px-6 lg:px-12 mb-20">
    <div class="max-w-7xl mx-auto">
      <div data-scroll data-scroll-speed="1">
        <p class="text-xs tracking-[0.3em] uppercase text-zinc-500 mb-4">The Process</p>
        <h2 class="text-5xl md:text-7xl lg:text-8xl font-black mb-8 jp-text">
          伝統工芸
        </h2>
        <p class="text-lg md:text-xl text-zinc-400 max-w-3xl">
          Every garment is a testament to traditional Japanese craftsmanship, where ancient techniques meet contemporary design sensibilities.
        </p>
      </div>
    </div>
  </div>

  <!-- Grid Layout -->
  <div class="container mx-auto px-6 lg:px-12">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12">
        {craftSteps.map((step, index) => (
          <div 
            class="craft-card group" 
            data-scroll 
            data-scroll-speed={(index % 2 === 0) ? "1" : "0.5"}
          >
            <!-- Image Container -->
            <div class="bg-zinc-900 aspect-[4/3] mb-6 relative overflow-hidden rounded-sm">
              <!-- Background Pattern -->
              <div class="absolute inset-0 bg-gradient-to-br from-zinc-800 to-zinc-900"></div>
              
              <!-- Content -->
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="text-center space-y-4 p-8">
                  <div class="text-8xl md:text-9xl font-black text-white/5 mb-6 transition-all duration-700 group-hover:scale-110 group-hover:text-white/10">
                    {step.number}
                  </div>
                  <p class="text-xs md:text-sm text-zinc-500 tracking-widest uppercase">
                    {step.image}
                  </p>
                </div>
              </div>
              
              <!-- Hover Overlay -->
              <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-all duration-500 flex items-center justify-center backdrop-blur-sm">
                <button class="border border-white/50 px-6 py-3 text-xs tracking-[0.2em] uppercase hover:bg-white hover:text-black transition-all duration-300 transform group-hover:scale-105">
                  View Details
                </button>
              </div>

              <!-- Number Badge -->
              <div class="absolute top-4 left-4 w-12 h-12 bg-white/5 backdrop-blur-md border border-white/10 flex items-center justify-center text-xs font-bold">
                {step.number}
              </div>
            </div>

            <!-- Text Content -->
            <div class="space-y-4">
              <div class="space-y-2">
                <h3 class="text-2xl md:text-3xl lg:text-4xl font-bold group-hover:text-white transition-colors duration-300">
                  {step.title}
                </h3>
                <p class="text-lg md:text-xl jp-text text-zinc-500 group-hover:text-zinc-400 transition-colors duration-300">
                  {step.titleJp}
                </p>
              </div>
              
              <div class="h-px bg-zinc-800 w-16 group-hover:w-32 group-hover:bg-white transition-all duration-500"></div>
              
              <p class="text-sm md:text-base text-zinc-400 leading-relaxed group-hover:text-zinc-300 transition-colors duration-300">
                {step.desc}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Bottom Decoration -->
  <div class="container mx-auto px-6 lg:px-12 mt-20">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-4 gap-2">
        {craftSteps.map((step, index) => (
          <div 
            class="h-1 bg-zinc-800 transition-all duration-500 hover:bg-white"
            style={`animation-delay: ${index * 0.1}s`}
          ></div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .craft-card {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .craft-card:nth-child(1) { animation-delay: 0.1s; }
  .craft-card:nth-child(2) { animation-delay: 0.2s; }
  .craft-card:nth-child(3) { animation-delay: 0.3s; }
  .craft-card:nth-child(4) { animation-delay: 0.4s; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Smooth hover transitions */
  .craft-card {
    transition: transform 0.3s ease;
  }

  .craft-card:hover {
    transform: translateY(-8px);
  }

  @media (max-width: 768px) {
    .craft-card:hover {
      transform: none;
    }
  }
</style>