<!-- Back to Top -->
<button class="back-to-top fixed bottom-8 right-8 w-12 h-12 bg-white text-black flex items-center justify-center opacity-0 pointer-events-none hover:scale-110 transition-all z-40">
  <i class="ph ph-arrow-up text-lg"></i>
</button>

<script>
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  window.addEventListener('load', () => {
    const backToTop = document.querySelector('.back-to-top');

    ScrollTrigger.create({
      scroller: '[data-scroll-container]',
      start: 'top -200',
      end: 99999,
      onToggle: (self) => {
        if (self.isActive) {
          backToTop?.classList.add('opacity-100', 'pointer-events-auto');
        } else {
          backToTop?.classList.remove('opacity-100', 'pointer-events-auto');
        }
      }
    });

    backToTop?.addEventListener('click', () => {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
  });
</script>